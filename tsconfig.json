{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "es2022",
    "lib": ["ES2022"],
    "composite": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "../knexfile.ts", "src/**/seeds/*.json"],
  "exclude": ["**/tests/", "**/__tests__/", "**/mocks/", "**/__mocks__/", "**/*.test.ts"]
}
